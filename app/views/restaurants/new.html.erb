<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Add a Restaurant here.</h1>

        <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category, collection: Restaurant::CATEGORY %>
          <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
